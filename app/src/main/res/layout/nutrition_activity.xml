<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDDFA"
    tools:context=".NutritionActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="600dp"
        android:scaleType="fitXY"
        android:src="@drawable/bgsmallgradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="91dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="85dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/bgnutritionbutton_bmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDate"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="330dp"
        android:layout_height="91dp"
        android:layout_marginStart="42.5dp"
        android:layout_marginTop="85dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="sans-serif"
        android:text="Today, 06 April"
        android:textColor="#9A000000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconBreakfast"
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/iconbreakfast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="145dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/bgnutritionbutton_bmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnDate" />

    <Button
        android:id="@+id/btnBreakfast"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="230dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="sans-serif"
        android:text="Add Breakfast"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".NutritionActivity"
        android:onClick="animate"
        android:layout_marginStart="215dp"
        android:layout_marginTop="275dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/search"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:src="@drawable/search_bar"
            android:contentDescription="@string/path_search" />

        <EditText
            android:onClick="animate"
            android:id="@+id/text"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:background="@null"
            android:textSize="12sp"
            android:textColor="?android:colorAccent"
            android:alpha="0"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor" />

    </FrameLayout>


    <ImageView
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/iconlunch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="155dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/bgnutritionbutton_bmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBreakfast" />

    <Button
        android:id="@+id/btnLunch"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="155dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="sans-serif"
        android:text="Add Lunch"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBreakfast" />

    <ImageView
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/icondinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/bgnutritionbutton_bmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnLunch" />

    <Button
        android:id="@+id/btnDinner"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif"
        android:text="Add Dinner"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnLunch" />

    <com.myfitnesstracker.ui.scripts.ProportionalImageView
        android:id="@+id/bgmaincontrols_bmi"
        android:layout_width="330dp"
        android:layout_height="91dp"
        android:layout_marginLeft="42.5dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/bgmaincontrols_bmi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.myfitnesstracker.ui.scripts.ProportionalImageView
        android:id="@+id/bgSelectedButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="175dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/bgselectedbutton_bmi"
        app:layout_constraintBottom_toBottomOf="@+id/bgmaincontrols_bmi"
        app:layout_constraintStart_toStartOf="parent" />

    <com.myfitnesstracker.ui.scripts.ProportionalImageButton
        android:id="@+id/btnWeightDiary"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="viewWeightDiaryActivity"
        android:scaleX="1.50"
        android:scaleY="1.50"
        android:src="@drawable/btnweightdiary_bmi"
        app:layout_constraintStart_toStartOf="@id/bgmaincontrols_bmi"
        app:layout_constraintTop_toTopOf="@id/bgmaincontrols_bmi" />

    <com.myfitnesstracker.ui.scripts.ProportionalImageButton
        android:id="@+id/btnTodaysOverview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="viewTodaysOverviewActivity"
        android:scaleX="1.50"
        android:scaleY="1.50"
        android:src="@drawable/btntodaysoverview_bmi"
        app:layout_constraintStart_toStartOf="@id/btnWeightDiary"
        app:layout_constraintTop_toTopOf="@id/bgmaincontrols_bmi" />

    <com.myfitnesstracker.ui.scripts.ProportionalImageButton
        android:id="@+id/btnAddExercise"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="viewExerciseActivity"
        android:scaleX="1.50"
        android:scaleY="1.50"
        android:src="@drawable/btnaddexercise_bmi"
        app:layout_constraintEnd_toEndOf="@id/btnAddNutrition"
        app:layout_constraintTop_toTopOf="@id/bgmaincontrols_bmi" />

    <com.myfitnesstracker.ui.scripts.ProportionalImageButton
        android:id="@+id/btnAddNutrition"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="viewNutritionActivity"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/btnnutrition_bmi"
        app:layout_constraintEnd_toEndOf="@id/bgmaincontrols_bmi"
        app:layout_constraintTop_toTopOf="@id/bgmaincontrols_bmi" />

</androidx.constraintlayout.widget.ConstraintLayout>